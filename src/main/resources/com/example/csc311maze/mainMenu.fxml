<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane fx:id="tabPane" xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.example.csc311maze.MazeController">

   <tabs>
      <!-- Main Menu Tab -->
      <Tab fx:id="mainMenuTab" text="Main Menu">
         <content>
            <VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="30.0" style="-fx-background-color: #20283E;">
               <children>
                  <Label text="Main Menu" textFill="#cb86dd">
                     <font>
                        <Font name="System Bold" size="71.0" />
                     </font>
                  </Label>

                  <Button fx:id="mazeButton1" onAction="#mazeButton1Click" text="Load Maze 1" />
                  <Button fx:id="mazeButton2" onAction="#mazeButton2Click" text="Load Maze 2" />
               </children>
            </VBox>
         </content>
      </Tab>

      <!-- Maze 1 Tab -->
      <Tab fx:id="maze1Tab" text="Maze 1">
         <content>
            <AnchorPane fx:id="maze1Pane">
               <fx:include source="mazeView1.fxml" />
            </AnchorPane>
         </content>
      </Tab>

      <!-- Maze 2 Tab -->
      <Tab fx:id="maze2Tab" text="Maze 2">
         <content>
            <AnchorPane fx:id="maze2Pane">
               <fx:include source="mazeView2.fxml" />
            </AnchorPane>
         </content>
      </Tab>

   </tabs>
</TabPane>

